<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Status | 天翔TNXGの空间站</title>
    <meta name="robots" content="noindex, nofollow">

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/UAParser.js/1.0.35/ua-parser.min.js"></script>
    <!-- Chart.js for line charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <style>
        :root {
            --bg-color: #F5F7FA;
            --card-bg: rgba(255, 255, 255, 0.94);
            --text-main: #2C3E50;
            --text-sub: #7F8C8D;
            --accent-color: #C0392B;
            --accent-color-rgb: 192, 57, 43;
            --success-color: #27AE60;
            --warning-color: #F39C12;
            --border-color: rgba(0, 0, 0, 0.06);
            --shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
            --chart-cpu-color: #E74C3C;
            --chart-mem-color: #3498DB;

            --font-sans: "MiSans", "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei",
                "Source Han Sans SC", "Noto Sans CJK SC", system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", Arial, sans-serif;
            --font-serif: "Noto Serif SC", "Source Han Serif SC", "Songti SC", "STSong",
                "SimSun", "NSimSun", "SimSun-ExtB", "WenQuanYi Bitmap Song",
                "AR PL UMing CN", "AR PL UKai CN", "Times New Roman", Times, Georgia, serif;
            --font-mono: "JetBrains Mono", "SF Mono", "Consolas", "Menlo", "Monaco",
                "DejaVu Sans Mono", "Liberation Mono", "Noto Sans Mono CJK SC",
                "Source Han Mono SC", "WenQuanYi Micro Hei Mono", "SimSun", "NSimSun", monospace;
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --bg-color: #0F0F0F;
                --card-bg: rgba(30, 30, 30, 0.9);
                --text-main: #ECF0F1;
                --text-sub: #95A5A6;
                --accent-color: #E74C3C;
                --accent-color-rgb: 231, 76, 60;
                --success-color: #2ECC71;
                --warning-color: #F1C40F;
                --border-color: rgba(255, 255, 255, 0.08);
                --shadow: 0 30px 80px rgba(0, 0, 0, 0.5);
                --chart-cpu-color: #E74C3C;
                --chart-mem-color: #5DADE2;
            }
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-sans);
            background: var(--bg-color);
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-image:
                linear-gradient(var(--border-color) 1px, transparent 1px),
                linear-gradient(90deg, var(--border-color) 1px, transparent 1px);
            background-size: 40px 40px;
        }

        .card {
            width: 100%;
            max-width: 760px;
            background: var(--card-bg);
            border-radius: 12px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            padding: 48px;
            position: relative;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            overflow: hidden;
        }

        .card-top-accent {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-color), transparent);
        }

        header {
            margin-bottom: 24px;
        }

        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        h1 {
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: -0.03em;
            margin-bottom: 4px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .subtitle {
            font-size: 0.85rem;
            color: var(--text-sub);
            font-family: var(--font-mono);
            letter-spacing: 0.05em;
            text-transform: uppercase;
        }

        .version-tag {
            background: var(--text-main);
            color: var(--bg-color);
            font-size: 0.7rem;
            padding: 2px 6px;
            border-radius: 4px;
            font-weight: bold;
        }

        .status-badge {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.75rem;
            font-weight: bold;
            padding: 4px 10px;
            border-radius: 20px;
        }

        .status-badge.online {
            color: var(--success-color);
            background: rgba(39, 174, 96, 0.1);
        }

        .status-badge .dot {
            width: 6px;
            height: 6px;
            background: currentColor;
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%,
            100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .quote-section {
            margin: 24px 0 36px 0;
            padding-left: 16px;
            border-left: 3px solid var(--accent-color);
        }

        .quote-main {
            font-size: 1.1rem;
            font-family: var(--font-serif);
            font-weight: 500;
            margin-bottom: 6px;
            opacity: 0.95;
        }

        .quote-sub {
            font-size: 0.85rem;
            color: var(--text-sub);
            font-weight: 400;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px 32px;
        }

        @media (max-width: 600px) {
            body {
                padding: 12px;
                align-items: flex-start;
                padding-top: 20px;
            }

            .grid {
                grid-template-columns: 1fr;
                gap: 16px;
            }

            .card {
                padding: 20px;
                border-radius: 8px;
            }

            h1 {
                font-size: 1.4rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 6px;
            }

            .header-top {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }

            .quote-section {
                margin: 20px 0 28px 0;
                padding-left: 12px;
            }

            .quote-main {
                font-size: 1rem;
            }

            .quote-sub {
                font-size: 0.8rem;
            }
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .label {
            font-size: 0.75rem;
            color: var(--text-sub);
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.05em;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .value {
            font-family: var(--font-mono);
            font-size: 0.95rem;
            color: var(--text-main);
            min-height: 1.4em;
            display: flex;
            align-items: center;
        }

        .panel {
            grid-column: 1 / -1;
            background: rgba(127, 127, 127, 0.04);
            border-radius: 10px;
            padding: 20px 24px;
            border: 1px solid var(--border-color);
            margin-top: 8px;
        }

        .panel.accent {
            background: rgba(var(--accent-color-rgb), 0.03);
            border-color: rgba(var(--accent-color-rgb), 0.1);
        }

        .panel-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 12px;
            border-bottom: 1px solid var(--border-color);
        }

        .panel-title {
            font-size: 0.8rem;
            color: var(--text-main);
            opacity: 0.85;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.03em;
        }

        .panel-title iconify-icon {
            font-size: 1.1rem;
            opacity: 0.7;
        }

        .panel .info-item {
            background: rgba(255, 255, 255, 0.4);
            border-radius: 8px;
            padding: 12px;
            border: 1px solid rgba(0, 0, 0, 0.02);
            transition: background 0.2s;
        }

        @media (prefers-color-scheme: dark) {
            .panel .info-item {
                background: rgba(255, 255, 255, 0.03);
                border-color: rgba(255, 255, 255, 0.05);
            }
        }

        .panel-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        @media (max-width: 600px) {
            .panel {
                padding: 16px 18px;
                margin-top: 6px;
            }

            .panel-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
                margin-bottom: 16px;
                padding-bottom: 10px;
            }

            .panel-title {
                font-size: 0.75rem;
            }

            .panel-grid {
                grid-template-columns: 1fr;
                gap: 14px;
            }

            .panel .info-item {
                padding: 10px;
            }

            .label {
                font-size: 0.7rem;
            }

            .value {
                font-size: 0.9rem;
            }
        }

        .service-tag {
            font-size: 0.7rem;
            font-weight: 600;
            padding: 3px 8px;
            border-radius: 4px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .service-tag.connected {
            color: var(--success-color);
            background: rgba(39, 174, 96, 0.1);
        }

        .service-tag.disconnected {
            color: var(--accent-color);
            background: rgba(var(--accent-color-rgb), 0.1);
        }

        .service-tag .indicator {
            width: 5px;
            height: 5px;
            border-radius: 50%;
            background: currentColor;
        }

        /* 图表容器样式 */
        .chart-container {
            grid-column: 1 / -1;
            background: rgba(127, 127, 127, 0.03);
            border-radius: 10px;
            padding: 20px 24px;
            border: 1px solid var(--border-color);
            margin-top: 8px;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
            padding-bottom: 12px;
            border-bottom: 1px solid var(--border-color);
        }

        .chart-title {
            font-size: 0.8rem;
            color: var(--text-main);
            opacity: 0.85;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.03em;
        }

        .chart-title iconify-icon {
            font-size: 1.1rem;
            opacity: 0.7;
        }

        .chart-legend {
            display: flex;
            gap: 16px;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.7rem;
            color: var(--text-sub);
            font-weight: 500;
        }

        .legend-color {
            width: 16px;
            height: 3px;
            border-radius: 2px;
        }

        .legend-color.cpu {
            background: var(--chart-cpu-color);
        }

        .legend-color.mem {
            background: var(--chart-mem-color);
        }

        .chart-wrapper {
            position: relative;
            height: 180px;
        }

        .current-stats {
            display: flex;
            gap: 32px;
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid var(--border-color);
        }

        .current-stat {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .current-stat .stat-label {
            font-size: 0.65rem;
            color: var(--text-sub);
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.05em;
        }

        .current-stat .stat-value {
            font-family: var(--font-mono);
            font-size: 1.2rem;
            font-weight: 700;
        }

        .current-stat .stat-value.cpu {
            color: var(--chart-cpu-color);
        }

        .current-stat .stat-value.mem {
            color: var(--chart-mem-color);
        }

        .current-stat .stat-unit {
            font-size: 0.75rem;
            font-weight: 400;
            opacity: 0.7;
        }

        .load-display {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 4px;
        }

        .load-item {
            flex: 1;
            text-align: center;
        }

        .load-item .num {
            font-family: var(--font-mono);
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--text-main);
        }

        .load-item .time {
            font-size: 0.65rem;
            color: var(--text-sub);
            margin-top: 2px;
        }

        .load-divider {
            width: 1px;
            height: 16px;
            background: var(--border-color);
        }

        .stat-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
            height: 100%;
            justify-content: center;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .stat-row .label-mini {
            font-size: 0.65rem;
            color: var(--text-sub);
            text-transform: uppercase;
        }

        .stat-row .val-mini {
            font-family: var(--font-mono);
            font-size: 0.85rem;
            color: var(--text-main);
            font-weight: 600;
        }

        .micro-bar-bg {
            width: 100%;
            height: 4px;
            background: var(--border-color);
            border-radius: 2px;
            overflow: hidden;
            margin-top: 4px;
        }

        .micro-bar-fill {
            height: 100%;
            background: var(--accent-color);
            opacity: 0.8;
            border-radius: 2px;
            transition: width 0.3s ease;
        }

        .skeleton {
            display: inline-block;
            height: 1em;
            width: 100px;
            background: linear-gradient(90deg, var(--border-color) 25%, rgba(127, 127, 127, 0.1) 50%, var(--border-color) 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
            border-radius: 4px;
        }

        @keyframes loading {
            0% {
                background-position: 200% 0;
            }
            100% {
                background-position: -200% 0;
            }
        }

        footer {
            margin-top: 40px;
            padding-top: 24px;
            border-top: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .copyright {
            font-size: 0.75rem;
            color: var(--text-sub);
        }

        .tech-badges {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .tech-pill {
            display: flex;
            align-items: center;
            gap: 6px;
            font-family: var(--font-mono);
            font-size: 0.75rem;
            font-weight: 700;
            padding: 4px 10px;
            border-radius: 4px;
            background: var(--bg-color);
            border: 1px solid var(--border-color);
            color: var(--text-main);
            transition: transform 0.2s;
        }

        .tech-pill:hover {
            transform: translateY(-1px);
        }

        .tech-pill iconify-icon {
            font-size: 1rem;
        }

        /* 移动端优化 */
        @media (max-width: 600px) {
            .chart-wrapper {
                height: 160px !important;
            }

            .current-stats {
                flex-direction: column;
                gap: 16px;
                margin-top: 14px;
                padding-top: 14px;
            }

            .current-stat {
                gap: 6px;
            }

            .current-stat .stat-value {
                font-size: 1.1rem;
            }

            .service-tag {
                font-size: 0.65rem;
                padding: 2px 6px;
            }

            .refresh-indicator {
                font-size: 0.6rem;
            }

            footer {
                margin-top: 32px;
                padding-top: 20px;
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }

            .tech-badges {
                gap: 8px;
                flex-wrap: wrap;
            }

            .tech-pill {
                font-size: 0.7rem;
                padding: 3px 8px;
            }

            .tech-pill iconify-icon {
                font-size: 0.9rem;
            }

            .load-display {
                flex-direction: column;
                gap: 8px;
            }

            .load-item {
                text-align: left;
            }

            .load-divider {
                display: none;
            }
        }

        /* 自动刷新指示器 */
        .refresh-indicator {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.65rem;
            color: var(--text-sub);
        }

        .refresh-indicator .spinner {
            width: 10px;
            height: 10px;
            border: 1.5px solid var(--border-color);
            border-radius: 50%;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .refresh-indicator .spinner.connected {
            opacity: 1;
            border-color: var(--success-color);
            animation: pulse 2s ease-in-out infinite;
        }

        .refresh-indicator .spinner.reconnecting {
            opacity: 1;
            border: 1.5px solid var(--border-color);
            border-top-color: var(--accent-color);
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <main class="card">
        <div class="card-top-accent"></div>

        <header>
            <div class="header-top">
                <div>
                    <h1>
                        TNXG Space Station
                        <span class="version-tag">{{ version }}</span>
                    </h1>
                    <div class="subtitle">API Gateway Interface</div>
                </div>
                <div class="status-badge online">
                    <div class="dot"></div>
                    ONLINE
                </div>
            </div>
        </header>

        <div class="quote-section">
            <div class="quote-main">迷子でもいい、迷子でも進め。</div>
            <div class="quote-sub">即使迷茫也无妨，迷茫着也要砥砺前行。</div>
        </div>

        <div class="grid">
            <!-- Connection Overview Panel -->
            <div class="panel" style="grid-column: 1 / -1;">
                <div class="panel-header">
                    <div class="panel-title">
                        <iconify-icon icon="mingcute:wifi-line"></iconify-icon>
                        Connection Overview
                    </div>
                </div>

                <div class="panel-grid">
                    <!-- 1. Server Time -->
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Server Time</div>
                        <div class="value" style="font-size: 0.85rem;">{{ server_time }}</div>
                    </div>

                    <!-- 2. Client IP -->
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Client IP Address</div>
                        <div class="value" style="font-size: 0.85rem;">{{ client_ip }}</div>
                    </div>

                    <!-- 3. Location -->
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Region Info</div>
                         <div class="value" style="font-size: 0.85rem;">
                            {% if client_location == "Unknown Region" %}
                            Direct Connection
                            {% else %}
                            {{ client_location }}
                            {% endif %}
                        </div>
                    </div>

                    <!-- 4. Protocol -->
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Protocol</div>
                        <div class="value" style="font-size: 0.85rem;">{{ client_protocol }}</div>
                    </div>
                </div>
            </div>

            <!-- Unified System Monitor Panel -->
            <div class="panel accent" style="grid-column: 1 / -1;">
                <div class="panel-header">
                    <div class="panel-title">
                        <iconify-icon icon="mingcute:server-line"></iconify-icon>
                        System Monitor
                    </div>
                    <div style="display: flex; gap: 12px; align-items: center;">
                        <div class="refresh-indicator">
                            <div class="spinner" id="refresh-spinner"></div>
                            <span id="refresh-text">Live</span>
                        </div>
                        <div class="service-tag {% if mongo_status == 'Connected' %}connected{% else %}disconnected{% endif %}">
                            <span class="indicator"></span>
                            MongoDB {{ mongo_status }}
                        </div>
                    </div>
                </div>

                <!-- Top Info Grid: System Details -->
                <div class="panel-grid" style="margin-bottom: 16px;">
                    <!-- 1. System -->
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">System</div>
                        <div class="value" style="font-size: 0.85rem;" title="{{ sys_kernel }}">
                            {{ sys_os }}
                        </div>
                        <div style="font-size: 0.65rem; color: var(--text-sub); margin-top:2px;">{{ sys_arch }}</div>
                    </div>

                    <!-- 2. Uptime -->
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Uptime</div>
                        <div class="value" style="font-size: 0.85rem;">
                            {{ sys_uptime }}
                        </div>
                        <div style="font-size: 0.65rem; color: var(--text-sub); margin-top:2px;">Since Boot</div>
                    </div>
                </div>

                <!-- Resource Chart Section -->
                <div class="chart-section">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 12px; align-items: center;">
                        <span class="label" style="font-size: 0.7rem; display: flex; align-items: center; gap: 6px;">
                            <iconify-icon icon="mingcute:chart-line-line"></iconify-icon>
                            Real-time Usage
                        </span>
                        <div class="chart-legend">
                            <div class="legend-item">
                                <div class="legend-color cpu"></div>
                                CPU
                            </div>
                            <div class="legend-item">
                                <div class="legend-color mem"></div>
                                Memory
                            </div>
                        </div>
                    </div>
                    
                    <div class="chart-wrapper" style="height: 200px;">
                        <canvas id="resourceChart"></canvas>
                    </div>

                    <!-- Current Stats -->
                    <div class="current-stats" style="margin-top: 20px; border-top: 1px solid var(--border-color); padding-top: 16px;">
                        <!-- CPU -->
                        <div class="current-stat">
                            <div class="stat-label">CPU Usage</div>
                            <div class="stat-value cpu" id="current-cpu">
                                {{ proc_cpu }}<span class="stat-unit">%</span>
                            </div>
                        </div>
                        
                        <!-- Memory -->
                        <div class="current-stat" style="flex: 2;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 4px;">
                                <div class="stat-label">Memory Allocation</div>
                                <div class="stat-value mem" id="current-mem" style="font-size: 1rem;">{{ proc_mem_rss }}</div>
                            </div>
                            <div class="micro-bar-bg" title="Usage: {{ proc_mem_percent }}%" style="height: 8px; margin: 8px 0;">
                                <div class="micro-bar-fill" id="mem-bar" style="width: {{ proc_mem_percent }}%;"></div>
                            </div>
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div class="stat-label" id="mem-percent">{{ proc_mem_percent }}% of Sys Total ({{ sys_mem_total }})</div>
                                <div class="stat-label">Virtual: <span id="current-virtual" style="font-family: var(--font-mono); color: var(--text-main);">{{ proc_mem_virtual }}</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 面板 2: 客户端环境分析 -->
            <div class="panel">
                <div class="panel-header">
                    <div class="panel-title">
                        <iconify-icon icon="mingcute:computer-line"></iconify-icon>
                        Client Environment
                    </div>
                </div>

                <div class="panel-grid">
                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Browser Engine</div>
                        <div class="value" style="font-size: 0.85rem;" id="ua-browser">
                            <span class="skeleton" style="width: 120px;"></span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Operating System</div>
                        <div class="value" style="font-size: 0.85rem;" id="ua-os">
                            <span class="skeleton" style="width: 100px;"></span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Device Model</div>
                        <div class="value" style="font-size: 0.85rem;" id="ua-device">
                            <span class="skeleton" style="width: 80px;"></span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="label" style="font-size: 0.7rem;">Architecture</div>
                        <div class="value" style="font-size: 0.85rem;" id="ua-cpu">
                            <span class="skeleton" style="width: 60px;"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            <div class="copyright">&copy; 2025 天翔TNXG</div>
            <div class="tech-badges">
                <div class="tech-pill">
                    <iconify-icon icon="simple-icons:rust" style="color: var(--text-main);"></iconify-icon>
                    RUST
                </div>
                <div class="tech-pill">
                    <iconify-icon icon="simple-icons:rocket" style="color: var(--accent-color);"></iconify-icon>
                    ROCKET.RS
                </div>
                <a href="https://github.com/TNXG/space-api" target="_blank" style="text-decoration: none;">
                    <div class="tech-pill">
                        <iconify-icon icon="mingcute:github-line"></iconify-icon>
                        OPEN SOURCE
                    </div>
                </a>
            </div>
        </footer>
    </main>

    <!-- 隐藏数据 -->
    <div id="raw-ua" style="display:none;">{{ raw_ua }}</div>
    <div id="cpu-history-data" style="display:none;">{{ cpu_history_json | safe }}</div>
    <div id="mem-history-data" style="display:none;">{{ mem_history_json | safe }}</div>
    <div id="timestamps-data" style="display:none;">{{ timestamps_json | safe }}</div>

    <script>
    // ========================================
    // 图表初始化与实时更新
    // ========================================
    
    // 获取初始数据
    let cpuHistory = JSON.parse(document.getElementById('cpu-history-data').textContent || '[]');
    let memHistory = JSON.parse(document.getElementById('mem-history-data').textContent || '[]');
    let timestamps = JSON.parse(document.getElementById('timestamps-data').textContent || '[]');

    // 检测深色模式
    const isDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    // 图表颜色配置
    const chartColors = {
        cpu: '#E74C3C',
        cpuBg: 'rgba(231, 76, 60, 0.1)',
        mem: isDarkMode ? '#5DADE2' : '#3498DB',
        memBg: isDarkMode ? 'rgba(93, 173, 226, 0.1)' : 'rgba(52, 152, 219, 0.1)',
        grid: isDarkMode ? 'rgba(255, 255, 255, 0.06)' : 'rgba(0, 0, 0, 0.06)',
        text: isDarkMode ? '#95A5A6' : '#7F8C8D'
    };

    // Chart.js 配置
    const ctx = document.getElementById('resourceChart').getContext('2d');
    
    const resourceChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: timestamps,
            datasets: [
                {
                    label: 'CPU %',
                    data: cpuHistory,
                    borderColor: chartColors.cpu,
                    backgroundColor: chartColors.cpuBg,
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 0,
                    pointHoverRadius: 4,
                    pointHoverBackgroundColor: chartColors.cpu,
                    yAxisID: 'y'
                },
                {
                    label: 'Memory (MiB)',
                    data: memHistory,
                    borderColor: chartColors.mem,
                    backgroundColor: chartColors.memBg,
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 0,
                    pointHoverRadius: 4,
                    pointHoverBackgroundColor: chartColors.mem,
                    yAxisID: 'y1'
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
                mode: 'index',
                intersect: false
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: isDarkMode ? 'rgba(30, 30, 30, 0.95)' : 'rgba(255, 255, 255, 0.95)',
                    titleColor: isDarkMode ? '#ECF0F1' : '#2C3E50',
                    bodyColor: isDarkMode ? '#BDC3C7' : '#7F8C8D',
                    borderColor: isDarkMode ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)',
                    borderWidth: 1,
                    padding: 12,
                    displayColors: true,
                    callbacks: {
                        label: function(context) {
                            if (context.datasetIndex === 0) {
                                return `CPU: ${context.parsed.y.toFixed(2)}%`;
                            } else {
                                return `Memory: ${context.parsed.y.toFixed(2)} MiB`;
                            }
                        }
                    }
                }
            },
            scales: {
                x: {
                    display: true,
                    grid: {
                        color: chartColors.grid,
                        drawBorder: false
                    },
                    ticks: {
                        color: chartColors.text,
                        font: {
                            size: 10,
                            family: "'JetBrains Mono', monospace"
                        },
                        maxRotation: 0,
                        maxTicksLimit: 6
                    }
                },
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    title: {
                        display: true,
                        text: 'CPU %',
                        color: chartColors.cpu,
                        font: {
                            size: 10,
                            weight: '600'
                        }
                    },
                    grid: {
                        color: chartColors.grid,
                        drawBorder: false
                    },
                    ticks: {
                        color: chartColors.text,
                        font: {
                            size: 10,
                            family: "'JetBrains Mono', monospace"
                        },
                        callback: function(value) {
                            return value + '%';
                        }
                    },
                    min: 0,
                    suggestedMax: 10
                },
                y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    title: {
                        display: true,
                        text: 'Memory (MiB)',
                        color: chartColors.mem,
                        font: {
                            size: 10,
                            weight: '600'
                        }
                    },
                    grid: {
                        drawOnChartArea: false
                    },
                    ticks: {
                        color: chartColors.text,
                        font: {
                            size: 10,
                            family: "'JetBrains Mono', monospace"
                        },
                        callback: function(value) {
                            return value.toFixed(1);
                        }
                    },
                    min: 0
                }
            },
            animation: {
                duration: 300
            }
        }
    });

    // ========================================
    // 实时数据更新 (SSE)
    // ========================================
    
    // UI更新函数
    function updateMetrics(data) {
        // 更新图表数据
        cpuHistory = data.cpu_history;
        memHistory = data.mem_history;
        timestamps = data.timestamps;
        
        resourceChart.data.labels = timestamps;
        resourceChart.data.datasets[0].data = cpuHistory;
        resourceChart.data.datasets[1].data = memHistory;
        resourceChart.update('none');
        
        // 更新当前值显示
        document.getElementById('current-cpu').innerHTML = 
            `${data.cpu.toFixed(1)}<span class="stat-unit">%</span>`;
        document.getElementById('current-mem').textContent = 
            formatBytes(data.mem_rss);
        
        // 更新内存百分比条
        const totalMem = parseFloat(document.querySelector('[title^="Usage:"]')?.title.match(/[\d.]+/) || 0);
        if (totalMem > 0 || true) {
             const memPercent = (data.mem_rss / (parseFloat('{{ sys_mem_total }}'.replace(/[^\d.]/g, '')) * getMultiplier('{{ sys_mem_total }}')) * 100).toFixed(2);
             document.getElementById('mem-percent').textContent = memPercent + '%';
             document.getElementById('mem-bar').style.width = memPercent + '%';
        }
    }

    const refreshText = document.getElementById('refresh-text');
    const spinner = document.getElementById('refresh-spinner');

    let evtSource;

    function initSSE() {
        if (evtSource) {
            evtSource.close();
        }

        evtSource = new EventSource("/api/metrics/stream");
        
        evtSource.onmessage = (event) => {
             const data = JSON.parse(event.data);
             updateMetrics(data);
             
             refreshText.textContent = 'Live';
             spinner.className = 'spinner connected';
        };

        evtSource.onerror = (err) => {
            console.error("EventSource failed:", err);
            refreshText.textContent = 'Reconnecting...';
            spinner.className = 'spinner reconnecting';
        };

        evtSource.onopen = () => {
             refreshText.textContent = 'Live';
             spinner.className = 'spinner connected';
        };
    }

    // 初始化 SSE
    initSSE();

    // 页面可见性变化时逻辑 (Optional: close stream when hidden to save server resources?)
    // User didn't request this optimization but it's good practice.
    document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
            if (evtSource) {
                evtSource.close();
                evtSource = null;
                refreshText.textContent = 'Paused';
                spinner.className = 'spinner';
            }
        } else {
            initSSE();
        }
    });

    // ========================================
    // UA 解析 (原有逻辑)
    // ========================================
    
    document.addEventListener('DOMContentLoaded', async () => {
        const rawUA = document.getElementById('raw-ua').textContent;

        const parser = new UAParser(rawUA);
        const r = parser.getResult();

        let browser = `${r.browser.name || 'Unknown'} ${r.browser.version || ''}`;
        let os = `${r.os.name || 'Unknown'} ${r.os.version || ''}`;
        let device = r.device.model ? `${r.device.vendor || ''} ${r.device.model}` : 'Desktop / Generic';
        let cpu = r.cpu.architecture || 'Unknown Arch';

        if (navigator.userAgentData) {
            try {
                const hints = await navigator.userAgentData.getHighEntropyValues([
                    "architecture", "bitness", "model", "platformVersion", "fullVersionList"
                ]);

                if (hints.architecture) {
                    cpu = `${hints.architecture} ${hints.bitness ? '(' + hints.bitness + 'bit)' : ''}`;
                }
                if (hints.model) {
                    device = hints.model;
                }

                if (hints.platform === 'Windows') {
                    const majorVer = parseInt(hints.platformVersion.split('.')[0]);
                    os = majorVer >= 13 ? 'Windows 11' : 'Windows 10';
                } else if (hints.platform) {
                    os = `${hints.platform} ${hints.platformVersion || ''}`;
                }

                const brand = hints.brands?.find(b => !["Not A(Brand", "Chromium"].includes(b.brand));
                if (brand) {
                    browser = `${brand.brand} ${brand.version}`;
                }

            } catch (e) {
                console.log("Client Hints Error:", e);
            }
        }

        const setText = (id, text) => {
            const el = document.getElementById(id);
            if (el) {
                el.innerHTML = text;
                el.style.color = "var(--text-main)";
            }
        };

        setTimeout(() => {
            setText('ua-browser', browser);
            setText('ua-os', os);
            setText('ua-device', device);
            setText('ua-cpu', cpu);
        }, 300);
    });

    // ========================================
    // 深色模式切换监听
    // ========================================
    
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        const isDark = e.matches;
        
        // 更新图表颜色
        const newColors = {
            mem: isDark ? '#5DADE2' : '#3498DB',
            memBg: isDark ? 'rgba(93, 173, 226, 0.1)' : 'rgba(52, 152, 219, 0.1)',
            grid: isDark ? 'rgba(255, 255, 255, 0.06)' : 'rgba(0, 0, 0, 0.06)',
            text: isDark ? '#95A5A6' : '#7F8C8D'
        };

        resourceChart.data.datasets[1].borderColor = newColors.mem;
        resourceChart.data.datasets[1].backgroundColor = newColors.memBg;
        resourceChart.options.scales.x.grid.color = newColors.grid;
        resourceChart.options.scales.y.grid.color = newColors.grid;
        resourceChart.options.scales.x.ticks.color = newColors.text;
        resourceChart.options.scales.y.ticks.color = newColors.text;
        resourceChart.options.scales.y1.ticks.color = newColors.text;
        resourceChart.options.scales.y1.title.color = newColors.mem;
        
        // 更新 tooltip 颜色
        resourceChart.options.plugins.tooltip.backgroundColor = isDark ? 'rgba(30, 30, 30, 0.95)' : 'rgba(255, 255, 255, 0.95)';
        resourceChart.options.plugins.tooltip.titleColor = isDark ? '#ECF0F1' : '#2C3E50';
        resourceChart.options.plugins.tooltip.bodyColor = isDark ? '#BDC3C7' : '#7F8C8D';
        resourceChart.options.plugins.tooltip.borderColor = isDark ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)';
        
        resourceChart.update();
    });
</script>