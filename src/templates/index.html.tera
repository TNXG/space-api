            border: 1px solid rgba(192, 57, 43, 0.2);
            box-shadow: 0 2px 8px rgba(192, 57, 43, 0.1);
        }

        .status-indicator {
            position: relative;
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: currentColor;
        }

        .status-indicator::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            border-radius: 50%;
            background: currentColor;
            opacity: 0.3;
            animation: status-pulse 2s ease-in-out infinite;
        }

        .status-badge.online .status-indicator::before {
            animation: status-pulse-success 2s ease-in-out infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        @keyframes status-pulse {

            0%,
            100% {
                transform: scale(1);
                opacity: 0.3;
            }

            50% {
                transform: scale(1.5);
                opacity: 0;
            }
        }

        @keyframes status-pulse-success {

            0%,
            100% {
                transform: scale(1);
                opacity: 0.4;
            }

            50% {
                transform: scale(2);
                opacity: 0;
            }
        }

        .quote-section {
